<!--index.wxml-->
<view class="container">
 <form bindsubmit="formSubmit" bindreset="formReset">
  <view class="section section_gap">
    <view class="section_title">Name:</view>
    <input name="input" placeholder="Enter your whole name." />
  </view>
  
  <view class="section section_gap">
    <view class="section_title">Mobile Number:</view>
    <input name="input" placeholder="Number Only." />
  </view>

  <view class="section section_gap">
    <view class="section_title">Email:</view>
    <input name="input" placeholder="Your personal email" />
  </view>

  <view class="section section_gap">
    <view class="section_title">Birthdate:</view>
    <input name="input" placeholder="format: MM/dd/yyyy" />
  </view>

  <view class="btn-area">
    <button class="form_button" formType="submit">Submit</button>
    <button class="form_button" formType="reset">Reset</button>
  </view>
</form>
</view>
