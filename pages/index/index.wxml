<!--index.wxml-->
<view class="container">
 <form bindsubmit="formSubmit" bindreset="formReset">
  <view class="section section_gap">
    <view class="section_title">Name:</view>
    <input name="name" placeholder="Enter your whole name." />
  </view>
  
  <view class="section section_gap">
    <view class="section_title">Mobile Number:</view>
    <input name="mobileNumber" placeholder="Number Only." />
  </view>

  <view class="section section_gap">
    <view class="section_title">Email:</view>
    <input name="email" placeholder="Your personal email" />
  </view>

  <view class="section section_gap">
    <view class="section_title">Birthdate:</view>
    <picker mode="date" value="{{date}}" bindchange="bindDateChange">
      <view class="picker">
        <input name="birthdate" placeholder="Click here to select" value="{{date}}" disabled="disabled"/>
      </view>
    </picker>
  </view>

  <view class="btn-area">
    <button class="form_button" formType="submit">Submit</button>
    <button class="form_button" formType="reset">Reset</button>
  </view>
</form>
</view>
