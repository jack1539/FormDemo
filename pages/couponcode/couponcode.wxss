.main_view {
  width: 100%;
  height: 100vh;
  background-color: #EEE;
}

.card {
  background-color: white;
  box-shadow: 0 3px 6px rgba(0,0,0,.16),0 3px 6px rgba(0,0,0,.23);
  border-radius:2px;
  border:0;
  height: 80vh;
  width: 80vw;
  position: relative;
  top: 50%;
  transform: translateY(-50%);
  margin-left: auto; 
  margin-right: auto;
}

.card_title {
  font-weight:bold;
  display: block;
  text-align: center;
  font-size: 50rpx;
}

.card_number {
  display: block;
  text-align: center;
  font-size: 50rpx;
}

.card_content {
  position: relative;
  top: 50%;
  transform: translateY(-50%);
}